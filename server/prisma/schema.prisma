generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  passwordHash String
  role         UserRole   @default(PATIENT)
  bookings     Booking[]
  createdAt    DateTime   @default(now())
}

model Slot {
  id        Int       @id @default(autoincrement())
  startAt   DateTime
  endAt     DateTime
  booking   Booking?
  createdAt DateTime  @default(now())
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  slotId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  slot      Slot     @relation(fields: [slotId], references: [id])
  createdAt DateTime @default(now())
}

enum UserRole {
  PATIENT
  ADMIN
}
